@{
    ViewData["Title"] = "Employee";
}
@model List<Employee>
<div class="text-center">
    <h1 class="display-4">EmployeeData</h1>
    <br/>
    <table class="table">
        <thead>
            <tr>
                <th>Emp_Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var employee in Model){
                   <tr>
                       <td>@employee.EmployeeId</td>
                       <td>@employee.Name</td>
                       <td>@employee.Age</td>
                        <td>@employee.Salary</td>
                        <td>
                            <a asp-action="CreateEditEmployee" asp-route-id="@employee.EmployeeId">Edit</a>
                         <a asp-action="DeleteEmploye" asp-route-id="@employee.EmployeeId">Delete</a>
                        </td>
                   </tr>
                }
            }
        </tbody>
    </table>
</div>
